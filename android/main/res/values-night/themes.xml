<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CulturalHeritageGame" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- Button style -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/custom_selector</item>
        <item name="android:textColor">@color/primaryTextButton</item>
        <item name="android:fontFamily">@font/motley_forces_regular</item>
        <item name="android:drawableTint">@color/primaryTextButton</item>
    </style>

    <style name="ButtonMenuStyle">
        <item name="android:background">@drawable/rounded_menu_button</item>
        <item name="android:textColor">@color/primaryTextButton</item>
        <item name="android:drawableTint">@color/primaryTextButton</item>
    </style>

    <!-- Action Bar Color -->
    <style name="ActionBarStyle">
        <item name="android:background">@color/complementaryActionBarDark</item>
    </style>

    <!-- General Background Color-->
    <style name="GeneralBGroundStyle">
        <item name="android:background">@color/generalBGround</item>
    </style>

    <!-- Window Fragment Background Color -->
    <style name="windowFragmStyle">
        <item name="android:background">@color/generalBGroundLighter</item>
    </style>

    <!-- Card Background Color -->
    <style name="cardBGStyle">
        <item name="cardBackgroundColor">@color/cardBGroundDark</item>
    </style>

    <!-- Edit Text Style -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:drawableTint">@color/primaryTextButton</item>
        <item name="android:textColor">@color/primaryTextButton</item>
    </style>

</resources>